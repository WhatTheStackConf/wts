{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["vite-plugin-solid-svg/types", "vite/client", "node"],
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"],
    },
  },
}
